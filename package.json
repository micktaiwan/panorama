{
  "name": "panorama",
  "private": true,
  "scripts": {
    "start": "meteor run --settings settings.json",
    "visualize": "meteor --production --extra-packages bundle-visualizer",
    "dev:meteor": "meteor run --settings settings.json",
    "dev:meteor:raw": "meteor run --raw-logs --settings settings.json",
    "dev:electron": "wait-on http://localhost:3000 && electron .",
    "dev:desktop": "concurrently -k -n meteor,electron -c blue,green \"npm:dev:meteor\" \"npm:dev:electron\"",
    "dev:desktop:raw": "concurrently -k -n meteor,electron -c blue,green \"npm:dev:meteor:raw\" \"npm:dev:electron\"",
    "test": "meteor test --once --driver-package meteortesting:mocha"
  },
  "dependencies": {
    "@babel/runtime": "^7.23.5",
    "@dnd-kit/core": "^6.3.1",
    "@dnd-kit/sortable": "^10.0.0",
    "@dnd-kit/utilities": "^3.2.2",
    "@qdrant/js-client-rest": "^1.15.1",
    "@swc/helpers": "^0.5.17",
    "marked": "^12.0.2",
    "meteor-node-stubs": "^1.2.12",
    "mongodb": "^6.19.0",
    "node-cron": "^4.2.1",
    "node-fetch": "^3.3.2",
    "node-ical": "^0.21.0",
    "prop-types": "^15.8.1",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "xlsx": "^0.18.5"
  },
  "meteor": {
    "mainModule": {
      "client": "client/main.jsx",
      "server": "server/main.js"
    },
    "modern": true
  },
  "devDependencies": {
    "@eslint/js": "^9.35.0",
    "concurrently": "^9.2.1",
    "electron": "^38.0.0",
    "eslint": "^9.35.0",
    "eslint-import-resolver-meteor": "^0.4.0",
    "eslint-plugin-import": "^2.32.0",
    "eslint-plugin-react": "^7.37.5",
    "eslint-plugin-react-hooks": "^5.2.0",
    "globals": "^16.4.0",
    "wait-on": "^8.0.4"
  },
  "main": "electron/main.js"
}
