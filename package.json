{
  "name": "panorama",
  "private": true,
  "scripts": {
    "start": "meteor run --settings settings.json",
    "visualize": "meteor --production --extra-packages bundle-visualizer",
    "dev:meteor": "meteor run --settings settings.json",
    "dev:meteor:raw": "meteor run --raw-logs --settings settings.json",
    "dev:electron": "wait-on http://localhost:3000 && electron .",
    "dev:desktop": "concurrently -k -n meteor,electron -c blue,green \"npm:dev:meteor\" \"npm:dev:electron\"",
    "dev:desktop:raw": "concurrently -k -n meteor,electron -c blue,green \"npm:dev:meteor:raw\" \"npm:dev:electron\"",
    "dev:meteor:4000": "meteor run --port 4000 --settings settings.json",
    "dev:electron:4000": "METEOR_PORT=4000 sh -c 'wait-on http://localhost:4000 && electron .'",
    "dev:desktop:4000": "concurrently -k -n meteor,electron -c blue,green \"npm run dev:meteor:4000\" \"npm run dev:electron:4000\"",
    "test": "meteor test --once --driver-package meteortesting:mocha"
  },
  "dependencies": {
    "@anthropic-ai/sdk": "^0.71.2",
    "@babel/runtime": "^7.23.5",
    "@dnd-kit/core": "^6.3.1",
    "@dnd-kit/sortable": "^10.0.0",
    "@dnd-kit/utilities": "^3.2.2",
    "@notionhq/client": "^5.3.0",
    "@qdrant/js-client-rest": "^1.15.1",
    "@slack/bolt": "^4.6.0",
    "@swc/helpers": "^0.5.17",
    "googleapis": "^160.0.0",
    "marked": "^12.0.2",
    "meteor-node-stubs": "^1.2.24",
    "mongodb": "^6.19.0",
    "node-cron": "^4.2.1",
    "node-fetch": "^3.3.2",
    "node-ical": "^0.21.0",
    "prop-types": "^15.8.1",
    "prosemirror-commands": "^1.7.1",
    "prosemirror-dropcursor": "^1.8.2",
    "prosemirror-gapcursor": "^1.4.0",
    "prosemirror-history": "^1.5.0",
    "prosemirror-inputrules": "^1.5.1",
    "prosemirror-keymap": "^1.2.3",
    "prosemirror-markdown": "^1.13.3",
    "prosemirror-model": "^1.25.4",
    "prosemirror-schema-basic": "^1.2.4",
    "prosemirror-schema-list": "^1.5.1",
    "prosemirror-state": "^1.4.4",
    "prosemirror-transform": "^1.11.0",
    "prosemirror-view": "^1.41.5",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "turndown": "^7.2.2",
    "xlsx": "^0.18.5"
  },
  "meteor": {
    "mainModule": {
      "client": "client/main.jsx",
      "server": "server/main.js"
    },
    "modern": true
  },
  "devDependencies": {
    "@eslint/js": "^9.35.0",
    "concurrently": "^9.2.1",
    "electron": "^38.0.0",
    "eslint": "^9.35.0",
    "eslint-import-resolver-meteor": "^0.4.0",
    "eslint-plugin-import": "^2.32.0",
    "eslint-plugin-react": "^7.37.5",
    "eslint-plugin-react-hooks": "^5.2.0",
    "globals": "^16.4.0",
    "wait-on": "^8.0.4"
  },
  "main": "electron/main.js"
}
